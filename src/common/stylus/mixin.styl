border-1px-bottom($color)
  position:relative
  &::after
  	display:block
  	width:100%
  	left:0px
  	bottom:0px
  	border:1px solid $color
  	position:absolute
  	content:' '
    
border-1px-top($color)
  position:relative
  &::after
  	display:block
  	width:100%
  	left:0px
  	top:0px
  	border:1px solid $color
  	position:absolute
  	content:' '
border-none()
  &::after
    display:none    
bg-image($url)
   background-image: url($url + "@2x.png")
   @media (-webkit-min-device-pixl-ratio:3),(min-device-pixel-ratio:3)
     background-image: url($url + "@3x.png")
     
     